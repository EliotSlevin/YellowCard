service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId 
      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["admin"];

      match /schedules/{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["admin", "pharmacist"];
      }
      
      match /routines/{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["admin", "pharmacist"];
      }
      
      match /{allSubcollections=**} {
        allow read, write: if request.auth.uid == userId 
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["admin"];
      }
    }

    match /medications/{allSubcollections=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["admin", "pharmacist"];
    }
  }
}
